<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Kavak" parent="Base.Theme.Kavak"/>
    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.Kavak" parent="Base.Theme.MaterialTheming">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/kavak_blue_brand</item>
        <item name="colorPrimaryVariant">@color/kavak_blue_light</item>
        <item name="colorPrimaryDark">@color/kavak_blue_dark</item>
        <item name="colorSecondary">@color/kavak_white</item>
        <item name="colorSecondaryVariant">@color/kavak_gray_aux</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="colorSurface">@color/kavak_white</item>
        <item name="android:colorBackground">@color/kavak_gray_aux</item>
        <item name="colorError">@color/kavak_red_negative</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnError">@color/kavak_white</item>
        <item name="colorOnSurface">@color/kavak_black_primary</item>
        <item name="colorOnBackground">@color/kavak_black_primary</item>
        <item name="colorOnPrimary">@color/kavak_white</item>
        <item name="colorOnSecondary">@color/kavak_blue_brand</item>

        <!-- custom brand color, -->
        <item name="colorWarning">@color/kavak_yellow_warning</item>
        <item name="colorTitleAccent">@color/kavak_blue_medium</item>
        <item name="colorSuccess">@color/kavak_green_positive_dark</item>
        <item name="colorPromo">@color/kavak_red_negative</item>
        <item name="colorTextGrayHighEmphasis">@color/kavak_gray_single_a</item>
        <item name="colorTextGrayMediumEmphasis">@color/kavak_gray_single_b</item>
        <item name="colorDividerOnSurface">@color/kavak_gray_single_c</item>
        <item name="colorShimmer">@color/kavak_gray_single_d</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Kavak.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Kavak.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Kavak.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Kavak.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Kavak.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Kavak.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Kavak.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Kavak.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Kavak.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Kavak.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Kavak.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Kavak.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Kavak.Overline</item>
        <item name="textAppearanceLink">@style/TextAppearance.Kavak.Link</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Kavak.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Kavak.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Kavak.LargeComponent</item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Kavak.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.Kavak.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="checkboxStyle">@style/Widget.Kavak.Checkbox</item>
        <item name="switchStyle">@style/Widget.Kavak.Switch</item>

        <!-- update styles button by default -->
        <item name="borderlessButtonStyle">@style/Widget.Kavak.Button.Text</item>
        <item name="buttonStyle">@style/Widget.Kavak.Button</item>
        <item name="materialButtonStyle">@style/Widget.Kavak.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Kavak.Button.Outlined</item>
        <!-- custom attr styles for rounded buttons -->
        <item name="roundedButtonStyle">@style/Widget.Kavak.Button.rounded</item>
        <item name="roundedButtonOutlinedStyle">@style/Widget.Kavak.Button.Outlined.Rounded</item>

    </style>

    <style name="Base.Theme.MaterialTheming" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>

    <style name="ThemeOverlay.Kavak.blue" parent="">
        <item name="colorPrimary">@color/kavak_blue_brand</item>
        <item name="colorOnPrimary">@color/kavak_white</item>
        <item name="colorSecondary">@color/kavak_black_primary</item>
        <item name="colorOnSecondary">@color/kavak_white</item>
    </style>

    <style name="ThemeOverlay.Kavak.NavigationView" parent="">
        <item name="colorPrimary">@color/kavak_blue_brand</item>
        <item name="colorOnPrimary">@color/kavak_white</item>
        <item name="colorSecondary">@color/kavak_black_primary</item>
        <item name="colorOnSecondary">@color/kavak_white</item>
        <item name="colorSurface">@color/kavak_blue_brand</item>
        <item name="colorOnSurface">@color/kavak_white</item>
    </style>
</resources>
