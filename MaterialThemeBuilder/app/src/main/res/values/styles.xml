<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!-- styles for update style buttons by default -->

    <style name="Widget.Kavak.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Widget.Kavak.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="iconTint">?colorSecondary</item>
        <item name="iconPadding">4dp</item>
    </style>

    <style name="Widget.Kavak.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="strokeColor">?colorSecondary</item>
        <item name="iconTint">?colorSecondary</item>
    </style>

    <!-- custom styles for rounded buttons attrs -->
    <style name="Widget.Kavak.Button.rounded" parent="Widget.Kavak.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Kavak.Button.rounded</item>
    </style>

    <style name="Widget.Kavak.Button.Outlined.Rounded" parent="Widget.Kavak.Button.Outlined">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Kavak.Button.rounded</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

</resources>
